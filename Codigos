def clicou() -> None:
    nome = txtNome.get()
    salario = float(txtSalario.get())
    messagebox.showinfo("ALERTA","Dados enviados com Sucesso!")

janela = Tk()
janela.geometry("400x300+700+300")
janela.title("Tela Inicial")
labelSaudacao = Label(janela, text="Seja-Bem Vindo(a)", font=("Arial", 20), fg="purple")
labelSaudacao.grid(row=0, column=1, sticky=N)
labelNome = Label(janela, text="Nome:", font=("Tahoma", 16), fg="navy")
labelNome.grid(row=1,column=0,sticky=W)
labelSalario = Label(janela, text="Salário:", font=("Tahoma", 16), fg="navy")
labelSalario.grid(row=2,column=0,sticky=W)
txtNome = Entry(janela,font="Tahoma 10", width = 22)
txtNome.grid(row=1, column=1)
txtSalario = Entry(janela, font="Tahoma 10", width = 22)
txtSalario.grid(row=2, column=1)
btnEnviar = Button(janela, text="Enviar",font="Tahoma 12", width=8, bg="purple", fg="white", command=clicou)
btnEnviar.grid(row=3, column=1)
janela.mainloop()
